= simple_form_for @article do |f|
  .card
    .card-body
      .mb-3
        = image_tag @article.image.variant(resize:"200x120!") if @article.image.attached?
        = f.input :image, :input_html => {:accept => 'image/*', :class=>'form-control'}
      .mb-3
        = f.input :bodypdf, :input_html => {:accept => 'document/pdf', :class=>'form-control'}
        = "Current: #{@article.bodypdf.filename.to_s}" if @article.bodypdf.attached?
      .mb-3
        = f.input :title, :input_html => {:class=>'form-control'}
      .mb-3
        = f.select :category, options_for_select(Article.categories.map {|key, value| [key.humanize, key]}), {}, class: 'form-select'

      = f.button :submit, class: 'btn btn-sx2c mt-4'
